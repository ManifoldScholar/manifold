{
  "presets": ["react", "es2015", "stage-2"],
  "env": {
    "development": {
      "plugins": [
        "react-hot-loader/babel",
        "transform-class-properties",
        "transform-export-extensions",
        "babel-plugin-transform-es2015-destructuring",
        ["module-resolver", {
          "root": ["./src"]
        }]
      ]
    },
    "test": {
      "plugins": [
        "transform-class-properties",
        "transform-export-extensions",
        "babel-plugin-transform-es2015-destructuring",
        ["module-resolver", {
          "root": ["./src"]
        }]
      ]
    },
    "production": {
      "plugins": [
        "transform-class-properties",
        "transform-export-extensions",
        "babel-plugin-transform-es2015-destructuring",
        ["module-resolver", {
          "root": ["./src"]
        }]
      ]
    }

  }
}
