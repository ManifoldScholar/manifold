<div>
  The following <%= @kind %> in <a href="<%= @resource.subject_url %>"><%= @resource.project.title.titleize %></a> has been flagged <%= @resource.flags_count %> <%= "time".pluralize(@resource.flags_count) %>.

  <div>
    <p style="margin-top: 15px; margin-bottom: 0;">
      <em><%= @resource.body %></em>
    </p>
  </div>

  <% if @message %>
    <div style="margin-block: 30px;">
      <span style="display: block; margin-block-start: 15px;">
        With the latest flag, the user included this comment:
      </span>
      <p><em><%= @message %></em></p>
    </div>
  <% end %>
</div>
