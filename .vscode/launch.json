{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Workers",
            "type": "Ruby",
            "cwd": "${workspaceRoot}/api",
            "request": "launch",
            "program": "${workspaceRoot}/api/bin/sidekiq",
            "pathToRDebugIDE": "~/.rbenv/shims/rdebug-ide",
            "debuggerPort": "1234",
            "showDebuggerOutput": true
        },
        {
            "name": "Zhong",
            "type": "Ruby",
            "cwd": "${workspaceRoot}/api",
            "request": "launch",
            "program": "${workspaceRoot}/api/bin/zhong",
            "pathToRDebugIDE": "~/.rbenv/shims/rdebug-ide",
            "debuggerPort": "1235",
            "showDebuggerOutput": true,
            "args": [
                "zhong.rb"
            ]
        },
        {
            "name": "Cable",
            "type": "Ruby",
            "cwd": "${workspaceRoot}/api",
            "request": "launch",
            "program": "${workspaceRoot}/api/bin/puma",
            "pathToRDebugIDE": "~/.rbenv/shims/rdebug-ide",
            "debuggerPort": "1236",
            "showDebuggerOutput": true,
            "args": [
                "-C",
                "${workspaceRoot}/api/config/puma_cable.rb",
                "cable/config.ru"
            ]
        },
        {
            "name": "API",
            "type": "Ruby",
            "cwd": "${workspaceRoot}/api",
            "request": "launch",
            "program": "${workspaceRoot}/api/bin/rails",
            "pathToRDebugIDE": "~/.rbenv/shims/rdebug-ide",
            "debuggerPort": "1237",
            "showDebuggerOutput": true,
            "args": [
                "server"
            ]
        },
        {
            "name": "Client",
            "command": "yarn watch",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceRoot}/client"
        },
        {
            "name": "Storybook",
            "command": "yarn storybook",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceRoot}/client"
        },
    ],
    "compounds": [
        {
            "name": "Manifold",
            "configurations": [
                "Workers",
                "Cable",
                "API",
                "Zhong"
            ],
            "preLaunchTask": "Elasticsearch"
        }
    ]
}
